<?xml version="1.0" encoding="UTF-8"?><project basedir="/home/rational/Projects/SocialAnalytics" default="run-ghtester">
   <property name="install.dir" value="/opt/IBM/RationalIntegrationTester"/>
   <taskdef classname="com.ghc.ghTester.ant.GHTester" name="GHTester">
      <classpath>
         <fileset dir="/opt/IBM/RationalIntegrationTester/../IBMIMShared/plugins/">
            <include name="com.ghc.ghTester.ant*.jar"/>
         </fileset>
      </classpath>
   </taskdef>
   <target depends="version-check" name="run-ghtester">
      <GHTester environment="TEST" haltOnFailure="true" project="${basedir}/SocialAnalytics.ghp"
				resultsServerLogging="absolute"
				junitDir="/home/rational/twitabout/junitTestResults">
         <Tests>
            <filelist dir="${basedir}">
               <file name="Twitabout/Common DB Methods"/>
               <file name="Twitter/End-to-end Test"/>
            </filelist>
         </Tests>
         <AppProperties>
            <property name="greenhat.net.defaultnetworkdevice" value="lo"/>
         </AppProperties>
      </GHTester>
   </target>
   <target name="version-check">
      <condition property="${correct.version}">
         <available classname="org.apache.tools.ant.taskdefs.condition.AntVersion"/>
      </condition>
      <antcall target="supported-version"/>
   </target>
   <target name="supported-version" unless="${correct.version}">
      <fail message="Please install ant version 1.7.0 or higher"/>
   </target>
</project>
